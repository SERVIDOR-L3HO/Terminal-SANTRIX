entrypoint = "main.sh"
modules = ["web", "bash", "nodejs-20", "nix"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["bash", "main.sh"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SANTRIX Import Tool"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SANTRIX Terminal Server"

[[workflows.workflow]]
name = "SANTRIX Import Tool"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./scripts/import_tool.sh"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "SANTRIX Terminal Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000
